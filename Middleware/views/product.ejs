<div class="col-xs-12 no-padding" style="margin-top: 15px;">
	<div class="col-xs-12 no-padding img-responsive">
		<!-- <div class="tiles">
			<span class="subdue">Browse</span>
			<span>Products</span>
	</div> -->
		<% for(var i=0; i<products.length; i++){ %>
			<% if(products[i].isActive == true) { %>
				<% if( new Date(products[i].exp_date).getTime() >= new Date().getTime() ){ %>
					<div class="col-xs-3 no-padding">
						<div class="product-wrapper">
							<div class="itemInnerBorader">
								<a href="/product?id=<%= products[i].p_id %>">
									<img src="/<%= products[i].product_img %>" class="" style="width: 180px; height: 180px; margin: 35px 45px 2px;">
								</a>
								<div class="productDetails">
									<div>
										<h5><b>$<%= products[i].price %></b> <span  class="glyphicon glyphicon-remove" style="align:right; color:red; font-weight: bold;"></span></h5>
	             <h5> New Price: <span style="color:black; font-weight: bold;">$<%= ((products[i].price)*0.2).toFixed(2) %></span></h5>

										<span class="unitPrice"> ($<%= products[i].price_unit %>/<%= products[i].unit %>) </span>
									</div>
									<div class="shortDetail">
										<a href="/product?id=<%= products[i].p_id %>">
											<%= products[i].name %>, <%= products[i].weight %> <%= products[i].unit %>
										</a>
										<h4>Expires : <%= new Date(products[i].exp_date).toLocaleDateString() %></h4>
									</div>
									<div class="bottomProduct">
										<div class="form-group pull-left">
											<select class="form-control productQuant" id="product<%= products[i].p_id %>">
												<% for(var j=1; j<=10; j++){ %>
												<option value=<%= j %>><%= j %></option>
												<% } %>
											</select>
										</div>
										<% if(typeof user == 'object') {%>
											<button class="add-to-cart" ng-click="addItem(<%= products[i].p_id %>)">Add</button>
										<% }else{ %>
											<button class="add-to-cart" style="background: #aaa; cursor: not-allowed; color: #fff">Add</button>
										<% } %>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% } %>
			<% } %>
		<% } %>
	</div>
</div>